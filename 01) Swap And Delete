#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){
        string s;
        cin>>s;
        int count0=0;
        int count1=0;
        for (int i=0;i<s.length();i++){
            if (s[i]=='0'){
                count0++;
            }
            else{
                count1++;
            }
        }
        int ans=0;
        for (int i=0;i<s.length();i++){
            if (s[i]=='1'){
                if (count0==0){
                    break;
                }
                count0--;
            }
            else{
                if (count1==0){
                    break;
                }
                count1--;
            }            
        }
        cout<<count0+count1<<endl;

        //T.C.:- O(n);
        //S.C.:- O(n);
    }
    return 0;
}
