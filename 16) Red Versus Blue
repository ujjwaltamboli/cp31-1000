#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){
        int n,r,b;
        cin>>n>>r>>b;
        int partsize=n/(b+1);
        int remainder=n%(b+1);
        string s(n,'R');
        for (int i=partsize-1;i<n;i=i+partsize){
            if (remainder!=0){
                i++;
                remainder--;
            }
            if (b!=0)s[i]='B';
            b--;
        }
        cout<<s<<endl;
    }

    //T.C.:- O(b+1);
    //S.C.:- O(n);
    return 0;
}
