#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin >> t;
    while (t--)
    {
        int n;
        cin >> n;
        int k;
        cin >> k;
        vector<int> store(n, 0);
        for (int i = 0; i < n; i++)
        {
            cin >> store[i];
        }
        
        //If k other than 4
        if (k != 4)
        {
            int mini = 1e9;
            for (int i = 0; i < n; i++)
            {
                mini = min(mini, (k - store[i] % k) % k);
            }
            cout << mini << endl;
        }


        //If k=4
        int count2 = 0;
        if (k == 4)
        {
            int mini4=1e9;
            for (int i = 0; i < n; i++)
            {
                mini4=min(mini4,(k-store[i]%k)%k);
            }


            int mini2=1e9;
            for (int i = 0; i < n; i++)
            {
                if (store[i]%2==0){
                    count2++;
                }
                if (count2>=2){
                    mini2=0;
                }
                else{
                    mini2=2-count2;
                }
            }
            cout<<min(mini4,mini2)<<endl;
        }
    }

    //T.C.:- O(n);
    //S.C.:- O(n);


    return 0;
}
