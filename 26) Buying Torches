#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        long long x, y, k;
        cin >> x >> y >> k;

        long long need = k + y * k ;
        long long d= x - 1;
        long long trades = (need - 1 + (d-1)) / d;  // ceil division

        cout << trades + k << endl;
    }

    //t.c.:- O(1);
    //S.C.:- O(1);
    return 0;
}
