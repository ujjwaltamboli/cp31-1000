#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){
        int a, b;
        cin>>a>>b;
        int xorsum;
        if (a%4==1){
            xorsum=(a-1);
        }
        else if (a%4==2){
            xorsum=(a-1)^(a-2);
        }
        else if (a%4==3){
            xorsum=(a-1)^(a-2)^(a-3);
        }
        else{
            xorsum=0;
        }
        if (xorsum==b){
            cout<<a<<endl;
        }
        else if ((xorsum ^ b)==a){
            cout<<a+2<<endl;
        }
        else {
            cout<<a+1<<endl;
        }

        //T.C.:- O(1)
        //S.C.:- O(1)
    }
    return 0;
}
