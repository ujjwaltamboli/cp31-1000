#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){
        int n;
        cin>>n;
        char c;
        cin>>c;
        string s;
        cin>>s;
        s=s+s;
        int count=0;
        int maxi=0;
        bool flag=false;
        for (int i=0;i<2*n;i++){
            if (s[i]==c && !flag){
                flag=true;
                count=0;
            }
            if (s[i]=='g' && flag){
                maxi=max(maxi,count);
                flag=false;
                count=0;
            }
            if (flag==true){
                count++;
            }
        }
        cout<<maxi<<endl;
        //T.C.:- O(n);
        //S.C.:- O(n);
    }
    return 0;
}
